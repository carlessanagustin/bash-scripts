#!/bin/bash -e

function __yaml2json() {
  which python3 >/dev/null 2>&1 || sudo apt install python3-minimal -y
  python -c 'import sys, yaml, json; print(json.dumps(yaml.load(sys.stdin.read(),Loader=yaml.FullLoader), sort_keys=False))'
}

(pip --disable-pip-version-check install PyYAML > /dev/null 2>&1) && __yaml2json $*
