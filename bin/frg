#!/bin/bash -e

function __frg() {
    which rg >/dev/null 2>&1 || sudo apt install ripgrep -y
    case "${1}" in
        ant)   shift; rg --type-add 'ant:build.xml' -t ant -H -n $@;;
        pom)   shift; rg --type-add 'pom:pom.xml' -t pom -H -n $@;;
        file)  shift; rg -H -n $@;;
        *) local extension="${1}"; shift; rg -t "${extension}" -H -n $@;;
    esac
}

__frg $@
